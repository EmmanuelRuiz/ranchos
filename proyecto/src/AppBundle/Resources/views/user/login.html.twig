{% extends "AppBundle:Layouts:layout.html.twig" %}


{% block content %}
    <section class="row about_medicalpro_row">
        <div class="container">
            <div class="row titleRow">
                <h5>Ingresa tus datos para avanzar</h5>
                <h2>Accede a tu cuenta</h2>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
            <div class="row">
                <div class="container">
                    <div class="formulario-registro col-lg-4">
                        <div>
                            {% if is_granted('ROLE_USER') %}
                                {{dump(app.user)}}
                            {% endif %}

                            <form action="{{ path('login_check') }}" method="POST">
                                <label>Ingresa tu correo</label>
                                <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control">

                                <label>Ingresa tu contrase√±a</label>
                                <input type="password" id="password" name="_password"  class="form-control">

                                <input type="hidden" name="_target_path" value="{{ path('home_admin') }}">
                                <input type="submit" value="Entrar" class="btn btn-azul btn-block">

                            </form>                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}

